    <style name="barangay360.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemTextAppearance">@style/barangay360.NavigationView.TextAppearance</item>
        <item name="itemTextColor">@color/selector_nav_fg</item>
        <item name="itemIconTint">@color/selector_nav_fg</item>
        <item name="itemShapeFillColor">@color/selector_nav_bg</item>
